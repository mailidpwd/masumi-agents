{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "..",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noEmit": true
  },
  "include": [
    "./**/*.ts",
    "../services/**/*.ts",
    "../types/**/*.ts",
    "../config/**/*.ts",
    "../utils/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../android",
    "../components"
  ]
}

